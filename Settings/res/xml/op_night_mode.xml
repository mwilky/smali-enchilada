<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:layout_width="wrap_content" android:layout_height="wrap_content" android:title="@string/oneplus_night_mode_enabled_op"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    <com.android.settings.fuelgauge.WallOfTextPreference android:selectable="false" android:key="night_mode_summary" android:summary="@string/oneplus_night_mode_summary" settings:allowDividerAbove="true" />
    <PreferenceCategory android:title="@string/oneplus_set_time" android:key="set_time">
        <ListPreference android:persistent="true" android:entries="@array/auto_activate_mode" android:title="@string/oneplus_auto_activate" android:key="auto_activate" android:entryValues="@array/auto_activate_mode_values" />
        <Preference android:title="@string/oneplus_turn_on_time" android:key="turn_on_time" />
        <Preference android:title="@string/oneplus_turn_off_time" android:key="turn_off_time" />
    </PreferenceCategory>
    <com.oneplus.settings.ui.OPPreferenceDivider android:key="preference_divider_line" />
    <PreferenceCategory android:title="@string/oneplus_night_mode_manual_open" android:key="night_mode_manual_open">
        <SwitchPreference android:persistent="false" android:title="@string/oneplus_night_mode_enabled_op_summary" android:key="night_mode_enabled" />
    </PreferenceCategory>
    <com.oneplus.settings.ui.OPPreferenceDivider android:key="preference_divider_line" />
    <PreferenceCategory android:title="@string/oneplus_adjust_effect" android:key="night_mode_adjust_effect">
        <com.oneplus.settings.ui.OPNightModeLevelPreferenceCategory android:key="night_mode_level_op" />
    </PreferenceCategory>
</PreferenceScreen>