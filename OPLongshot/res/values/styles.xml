<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="@android:style/TextAppearance" />
    <style name="TextAppearance.GuideText" parent="@style/TextAppearance" />
    <style name="TextAppearance.GuideText.Edit" parent="@style/TextAppearance.GuideText">
        <item name="android:textSize">@dimen/guide_edit_text_size</item>
        <item name="android:textColor">@color/guide_edit_text_color</item>
    </style>
    <style name="TextAppearance.GuideText.Main" parent="@style/TextAppearance.GuideText">
        <item name="android:textSize">@dimen/guide_main_text_size</item>
        <item name="android:textColor">@color/guide_main_text_color</item>
    </style>
    <style name="TextAppearance.GuideButton" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/btn_guide_text_size</item>
        <item name="android:textColor">@color/guide_main_text_color</item>
    </style>
    <style name="TextAppearance.FloatButton" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/btn_float_text_size</item>
        <item name="android:textColor">@color/btn_float_text_color</item>
    </style>
    <style name="FloatButtonStyle">
        <item name="android:textAppearance">@style/TextAppearance.FloatButton</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FloatButtonStyle.First" parent="@style/FloatButtonStyle">
        <item name="android:background">@drawable/btn_bg_first</item>
        <item name="android:paddingTop">@dimen/btn_float_first_padding_top</item>
        <item name="android:drawablePadding">@dimen/btn_float_first_padding_drawable</item>
    </style>
    <style name="FloatButtonStyle.Middle" parent="@style/FloatButtonStyle">
        <item name="android:background">@drawable/btn_bg_middle</item>
        <item name="android:paddingTop">@dimen/btn_float_middle_padding_top</item>
        <item name="android:drawablePadding">@dimen/btn_float_middle_padding_drawable</item>
    </style>
    <style name="FloatButtonStyle.Last" parent="@style/FloatButtonStyle">
        <item name="android:background">@drawable/btn_bg_last</item>
        <item name="android:paddingTop">@dimen/btn_float_last_padding_top</item>
        <item name="android:drawablePadding">@dimen/btn_float_last_padding_drawable</item>
    </style>
    <style name="oneplus_contorl_text_style_subheading">
        <item name="android:textSize">@dimen/oneplus_contorl_text_size_subheading</item>
        <item name="android:textColor">@color/oneplus_contorl_text_color_primary_dark</item>
        <item name="android:fontFamily">@string/oneplus_contorl_font_family_subheading</item>
    </style>
    <style name="oneplus_contorl_text_style_button">
        <item name="android:textSize">@dimen/oneplus_contorl_text_size_button</item>
        <item name="android:textColor">@color/oneplus_contorl_text_color_primary_dark</item>
        <item name="android:fontFamily">@string/oneplus_contorl_font_family_button</item>
    </style>
    <style name="DialogTheme" parent="@android:style/Theme.Holo.Dialog" />
    <style name="AppTheme" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
